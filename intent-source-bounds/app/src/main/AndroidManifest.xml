<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.arunkumar.intentsourcebounds">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_circle_reveal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_circle_reveal_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".HeroTransformActivity"
            android:icon="@mipmap/ic_hero_transform"
            android:label="@string/title_activity_hero_transform"
            android:roundIcon="@mipmap/ic_hero_transform_round"
            android:theme="@style/AppTheme.NoWindowBackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MaterialTransformActivity"
            android:icon="@mipmap/ic_material_transform"
            android:label="@string/title_activity_material_transform"
            android:roundIcon="@mipmap/ic_material_transform_round"
            android:theme="@style/AppTheme.NoWindowBackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CircularRevealActivity"
            android:icon="@mipmap/ic_circle_reveal"
            android:label="@string/title_activity_circular_reveal"
            android:roundIcon="@mipmap/ic_circle_reveal_round"
            android:theme="@style/AppTheme.NoWindowBackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>